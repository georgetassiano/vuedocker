ARG NODEJS_ALPINE_VERSION=${NODEJS_ALPINE_VERSION:-11.8.0}
FROM node:${NODEJS_ALPINE_VERSION}-alpine

MAINTAINER George Tassiano

ARG APP_CODE_PATH_CONTAINER=${APP_CODE_PATH_CONTAINER:-/var/www}
WORKDIR ${APP_CODE_PATH_CONTAINER}

RUN apk update && \
    npm install -g @vue/cli

ARG DOCKER_HOST_IP=${DOCKER_HOST_IP:-0.0.0.0}
ENV HOST ${DOCKER_HOST_IP}

ARG VUECLI_PORT_EXPOSE=${VUECLI_PORT_EXPOSE:-8000}
EXPOSE ${VUECLI_PORT_EXPOSE}